{
  "languageserver": {
    "elixir-ls": {
      "command": "~/Documents/elixir-ls/rel/language_server.sh",
      "filetypes": ["elixir", "eelixir"],
      "settings": {
        "elixirLS": {
          "dialyzerEnabled": false
        }
      }
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml"
      ],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {}
      }
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "elixir",
    "eelixir",
    "eelixir.html",
    "html",
    "json",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
